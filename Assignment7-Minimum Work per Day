//A student wants to earn maximum profit by buying and selling stocks.He can complete as many transactions as he wants, but he cannot hold more than one stock at a time.
//Find the maximum profit.
#include<iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of days: ";
    cin >> n;

    int price[50];
    cout << "Enter stock prices for each day:\n";
    for(int i = 0; i < n; i++) {
        cin >> price[i];
    }

    int profit = 0;

    // Traverse through prices
    for(int i = 1; i < n; i++) {
        // If today's price is greater than yesterday's
        // then buy yesterday and sell today
        if(price[i] > price[i - 1]) {
            profit += price[i] - price[i - 1];
        }
    }

    cout << "Maximum Profit: " << profit << endl;

    return 0;
}

/*
--------------------
Sample Input:
Enter number of days: 6
Enter stock prices for each day:
7 1 5 3 6 4

Sample Output:
Maximum Profit: 7

Explanation:
- Buy at 1, sell at 5 -> profit 4
- Buy at 3, sell at 6 -> profit 3
Total Profit = 4 + 3 = 7
--------------------
*/
